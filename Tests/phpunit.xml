<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./bootstrap.php" colors="true">

    <testsuites>
        <testsuite name="Zend_Filter">
            <directory suffix="Test.php">./Zend/Filter</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">../src</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="./logs" charset="UTF-8"
             yui="true" highlight="true" lowUpperBound="70" highLowerBound="30" />
    </logging>

</phpunit>